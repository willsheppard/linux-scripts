#!/bin/bash

currentdir=$(pwd)

# Setup for microlith
fixdir="$HOME/dev/foo-repo"

if [[ "$currentdir" == "$fixdir" ]]
then
    ################# MICROLITH

    echo "Microlith diff"
    microlith-diff.sh $@
else
    ################# NORMAL

    # Display a visual divider
    perl -le'$tr = ("=") x 120; print $tr for 1..2'

    # Diff with useful options
    git diff --no-prefix --relative --color --histogram $@

    echo

    git status

fi
